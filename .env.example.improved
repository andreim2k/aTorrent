# aTorrent Configuration File
# Copy this file to .env and customize the values

# Application Settings
APP_NAME=aTorrent
APP_VERSION=1.0.0
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here-replace-with-random-string
SECURE_COOKIES=false
COOKIE_SAMESITE=lax

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./aTorrent.db

# CORS Settings (for security, list specific domains in production)
DEVELOPMENT_MODE=false
FRONTEND_URL=http://localhost:3000

# Download Settings
DOWNLOADS_PATH=./downloads
MAX_DOWNLOAD_SPEED=0
MAX_UPLOAD_SPEED=0
MAX_CONNECTIONS=200
MAX_TORRENTS=100

# External API Keys
DEFAULT_TMDB_API_KEY=your-tmdb-api-key-here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# WebSocket Settings
WEBSOCKET_PING_INTERVAL=30

# Torrent Service Settings
TORRENT_UPDATE_INTERVAL=0.2
ALERT_PROCESSING_INTERVAL=0.2

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/atorrent.log

# Production Settings (set to true in production)
ENABLE_METRICS=false
ENABLE_HEALTH_CHECKS=true
