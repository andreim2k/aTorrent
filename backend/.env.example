# Database
DATABASE_URL=sqlite:///./atorrent.db

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
APP_NAME=aTorrent
APP_VERSION=1.0.0
DEBUG=true
API_V1_STR=/api/v1

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Torrent Settings
DOWNLOAD_PATH=./downloads
MAX_DOWNLOAD_SPEED=0  # 0 for unlimited (bytes/sec)
MAX_UPLOAD_SPEED=0    # 0 for unlimited (bytes/sec)
MAX_CONNECTIONS=200
MAX_TORRENTS=100

# Server
HOST=0.0.0.0
PORT=8000
